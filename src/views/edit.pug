extends base.pug



block content 
    h4 Update Video
    form(method="POST")
        input(name="title" placeholder="Video Title" required value=video.title)
        input(name="description" type="text" required placeholder="Description" value=video.description)
        input(name="hashtags" type="text" required  placeholder="Hashtags(add with comma)" value=video.hashtags.join())
        input(value="Save" type="submit")